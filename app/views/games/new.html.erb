<h1 style="margin-bottom: 50px">New game:</h1>
<% @letters.each do |letter| %>
<span style="background-color: blue; padding:20px; font-size: 50px; font-weight:bold; color: white; margin-right: 20px"><%= letter %></span>
<% end %>

<form action="/score" method="post" style="margin-top: 100px">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="text" name="user_answer">
  <input type="submit" value="Submit your answer">
</form>
